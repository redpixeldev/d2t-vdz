---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---

<Layout title='Contact'>
	<Header />
	<div class="bg-brand-orange relative md:my-5">
		<img src="/img/pattern.png" class="absolute bottom-0 md:bottom-auto md:top-0 right-0 w-full md:w-[55%] h-[55%] md:h-full object-cover opacity-30 md:opacity-50" alt="">
		<img src="/img/map-contact.jpg" class="md:absolute inset-0 md:w-[45%] h-full object-cover" alt="">
		<div class="container py-10 md:py-12 relative z-20">
			<div class="md:w-[55%] ml-auto md:pl-5 lg:pl-10 xl:pr-16">
				<h1 class="text-3xl md:text-4xl font-black text-white pb-5">Contacteer ons</h1>
				<p class="text-white text-xs pb-5">contacteer ons voor meer antwoorden op uw vragen!</p>
				<div class="flex flex-row sm:flex-col lg:flex-row gap-6 sm:gap-2 lg:gap-6">
					<p class="text-white text-xs">Rozebeeksestraat 103 <br/>
					8860 Lendelede</p>
					<div>
						<a href="tel:+051312792" class="text-white text-xs block hover:text-black hover:underline">tel. 051 31 27 92</a>
						<a href="mailto:info@vdz.be" class="text-white text-xs block hover:text-black hover:underline">info@vdz.be</a>
					</div>
				</div>
				<form class="pt-8">
					<h2 class="text-3xl md:text-4xl font-black text-white pb-5">Contactformulier</h2>
					<div class="space-y-3">
						<div class="flex flex-col lg:flex-row gap-3 lg:gap-9">
							<input type="text" required name="name" class="lg:w-1/2 px-0 py-1 border-b border-t-0 border-l-0 border-r-0 border-white bg-transparent placeholder-white text-white text-xs" id="name" placeholder="Naam">
							<input type="text" required name="last-name" class="lg:w-1/2 px-0 py-1 border-b border-t-0 border-l-0 border-r-0 border-white bg-transparent placeholder-white text-white text-xs" id="last-name" placeholder="Voornaam*">
						</div>
						<div class="flex flex-col lg:flex-row gap-3 lg:gap-9">
							<input type="text" required name="tel" class="lg:w-1/2 px-0 py-1 border-b border-t-0 border-l-0 border-r-0 border-white bg-transparent placeholder-white text-white text-xs" id="tel" placeholder="Tel">
							<input type="email" required name="email" class="lg:w-1/2 px-0 py-1 border-b border-t-0 border-l-0 border-r-0 border-white bg-transparent placeholder-white text-white text-xs" id="email" placeholder="Mail*">
						</div>
						<textarea name="message" id="message" rows="8" placeholder="Bericht" class="w-full px-0 py-1 border-b border-t-0 border-l-0 border-r-0 border-white bg-transparent placeholder-white text-white text-xs"></textarea>
						<div class="mb-4 flex flex-col lg:flex-row gap-3 lg:gap-8 lg:items-center">
							<div class="flex">
								<input type="checkbox" class="shrink-0 mt-0.5 border-white rounded-sm text-blue-600 focus:ring-blue-500 checked:border-blue-500 disabled:opacity-50 disabled:pointer-events-none" id="hs-default-checkbox">
								<label for="hs-default-checkbox" class="text-xs text-white ms-3">Ik ga akkoord dat mijn gegevens gebruikt worden om deze vraag te beantwoorden.</label>
							</div>
							<div>
								<button class="inline-flex shrink-0 font-black text-lg/[26px] text-white border-2 border-white p-px rounded-full hover:text-black btn">
								<span class="bg-transparent border border-white block rounded-full px-3">VERZENDEN</span>
							</button>
							</div>
						</div>
					</div>
					<img src="/img/captcha.gif" class="h-10" alt="">
				</form>
			</div>
		</div>
	</div>
	<Footer />
</Layout>
